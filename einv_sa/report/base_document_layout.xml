<!--                             </div>-->
<!--                         </div>-->
<!--                     </div>-->
                    <div class="text-center">
                        <div>
                            <span>Telephone: +966 11 2034900</span>
                            <span style="margin:0 10px">|</span>
                            <span>http://www.endconsumer.net/</span>
                        </div>
                        <div t-if="report_type == 'pdf'">
                            Page:
                            <span class="page"/>
                            /
